<include file="./Addons/Paiqian/View/default/Wap/_head.html"/>
<body>
<div class="container">
	<header class="header">
        <a class="back" href="javascript:;" onClick="$.WeiPHP.back();"></a>
        <span class="title">注册</span>
        <a class="cate" href="javascript:;" onClick="$.WeiPHP.showPopCate();"></a>
    </header>
    <include file="./Addons/Paiqian/View/default/Wap/_menu.html"/>
    <div class="page">
    	<div class="weui_cells weui_cells_form">
            <div class="weui_cell">
                <div class="weui_cell_hd"><label class="weui_label">手机号</label></div>
                <div class="weui_cell_bd weui_cell_primary">
                    <input class="weui_input" type="tel" placeholder="请输入手机号" id="mobile" name="mobile">
                </div>
            </div>
            <div class="weui_cell">
                <div class="weui_cell_hd"><label class="weui_label">密码</label></div>
                <div class="weui_cell_bd weui_cell_primary">
                    <input class="weui_input" type="password" placeholder="请输入密码" id="password" name="password">
                </div>
            </div>
            <div class="weui_cell">
                <div class="weui_cell_hd"><label class="weui_label">邀请码</label></div>
                <div class="weui_cell_bd weui_cell_primary">
                    <input class="weui_input" type="text" placeholder="如果有邀请码请填写" id="invite_code" name="invite_code">
                </div>
            </div>            
        </div>
        <div class="weui_btn_area">
            <button class="weui_btn weui_btn_primary">注册</button>
        </div>
        <div class="weui_btn_area"> 已经注册，<a href="{:U('login')}">点这里登录 ></a>
    </div>
    <include file="./Addons/Paiqian/View/default/Wap/_service.html"/>
</div>
<script type="text/javascript">
$(function(){
	  $('.weui_btn').click(function(){
		  var mobile = $('#mobile').val();
		  if(mobile==''){
			  $.WeiPHP.toast('手机号不能为空',0,3000);
			  return false;
		  }		  
		  var password = $('#password').val();
		  if(password==''){
			  $.WeiPHP.toast('密码不能为空',0,3000);
			  return false;
		  }
		  var invite_code = $('#invite_code').val();
		  
		  $.post("{:U('register')}",{mobile:mobile,password:password,invite_code:invite_code},function(res){
			  
			  if(res != ''){
				 
				  $.WeiPHP.toast(res,0,3000);
				  return false;
			  }else{
			  window.location.href = "{:U('index')}";
			  }
		   });
	  });	
});
</script>
<include file="./Addons/Paiqian/View/default/Wap/_foot.html"/>